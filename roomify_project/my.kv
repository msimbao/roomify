WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name:"main"

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        Image:
            source: 'images/circleback.jpeg'
            size: self.texture_size

        FloatLayout:
            Button:
                size_hint: 0.25,0.07
                text:'Begin'
                font_size:20
                pos_hint:{"center_x":0.5,"center_y":0.5}
                border: -4,-4,-4,-4
                background_normal:'images/transparent.png'
                background_down:'images/transparent.png'
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            
            Label:
                text: "Roomify"
                font_size:30
                pos_hint:{"center_x":0.5,"center_y":0.9}
                font_name: "Fredoka"

            Label:
                text: "Listen to a random song based on what room you’re in what genre of music you’d like in that room"
                font_size:20
                pos_hint:{"center_x":0.5,"y":0.05}
                font_name:"Avenir"
                text_size: self.width, None
                size_hint_y:None
                size_hint_x:0.8
                height:self.texture_size[1]
                halign:'center'
                valign:'center'


<SecondWindow>:
    name:"second"

    FloatLayout:

        Image:
            source: 'images/moonback.jpg'
            size: self.texture_size
            font_size:20

        Label:
            size_hint: 0.25,0.07
            font_size:20
            pos_hint: {"x":0.4, "y":0.7}
            text: "Room Name"

        TextInput:
            id: name
            size_hint: 0.25,0.07
            font_size:20
            border: -4,-4,-4,-4
            pos_hint: {"x":0.4, "y":0.63}
            multinline:False

        Button:
            text:"Save"
            size_hint: 0.25,0.07
            font_size:30
            pos_hint: {"x":0.4, "y":0.55}
            background_normal:'images/transparent.png'
            background_down:'images/transparent.png'
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ThirdWindow>
    name:"third"

    FloatLayout:
        Image:
            source: 'images/moonback.jpg'
            size: self.texture_size
        Label:
            text: "Try new music"
            font_size:15
            pos_hint: {"x":0, "y":.4}

        Label:                
            text: "for new places"
            font_size:20
            pos_hint: {"x":0, "y":.35}