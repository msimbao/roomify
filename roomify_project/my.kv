                root.manager.transition.direction = "left"


        Button:
            size_hint: 0.35,0.07
            text:'Back'
            font_size:20
            font_color:[1,1,1,1]
            pos_hint:{"center_x":0.5,"y":0.1}
            border: -4,-4,-4,-4
            background_color:[1,1,1,1]
            background_normal:'images/LargeEmptyButton.png'
            on_release:
                app.root.current = "third"
