            pos_hint:{"center_x":0.5,"y":0.7}
            border: -4,-4,-4,-4
            background_color:[.1,.51,.77,1]
            background_normal:'images/LargeEmptyButton.png'
            on_release:
                genre = "folk"
                app.root.current = "Fourth"
                root.manager.transition.direction = "left"

        Button:
            size_hint: 0.35,0.07
            text:'Nature'
